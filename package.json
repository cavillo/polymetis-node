{
  "name": "polymetis-node",
  "version": "1.0.9",
  "description": "Wrapper for building micro-services. Polymetis provides a connection to a rabbit message broker for handling events & task, redis, mongodb and postgres connections.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start-ts": "ts-node --fast --transpileOnly src/index.ts",
    "test": "mocha --timeout=20000 'test/**/*.test.ts'",
    "build": "rm -rf dist && tsc --project ./tsconfig.json",
    "clean": "rm -rf dist",
    "lint": "node_modules/.bin/tslint --project ./tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cavillo/polymetis-node.git"
  },
  "keywords": [
    "microservice",
    "rabbitmq",
    "amqp",
    "redis",
    "mongo",
    "mongodb",
    "postgres",
    "typescript",
    "api",
    "express"
  ],
  "author": "cavillo",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/mocha": "5.2.6",
    "@types/amqplib": "^0.5.10",
    "@types/cors": "^2.8.4",
    "@types/crypto-js": "^3.1.43",
    "@types/dockerode": "^2.5.12",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/glob": "^7.1.1",
    "@types/jwt-simple": "^0.5.33",
    "@types/lodash": "^4.14.118",
    "@types/massive": "^5.4.3",
    "@types/mongodb": "^3.1.27",
    "@types/node": "^10.12.3",
    "@types/redis": "2.6.0",
    "ts-node": "^7.0.1",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.11.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "amqplib": "^0.5.3",
    "axios": "^0.18.0",
    "chalk": "^2.4.1",
    "cors": "^2.8.5",
    "crypto-js": "^3.1.9-1",
    "dockerode": "^2.5.8",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "glob": "^7.1.3",
    "jwt-simple": "^0.5.6",
    "lodash": "^4.17.11",
    "massive": "^5.10.0",
    "moment": "^2.24.0",
    "mongodb": "^3.2.6",
    "redis": "2.7.1"
  },
  "bugs": {
    "url": "https://github.com/cavillo/polymetis-node/issues"
  },
  "homepage": "https://github.com/cavillo/polymetis-node#readme"
}
